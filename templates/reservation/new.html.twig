                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-sign-in" aria-hidden="true">Buscar</i>
                                </button>
                            </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="col-sm-7 room-seeker-results">
                </div>
            </div>
        </div>
    </div>


{% endblock %}