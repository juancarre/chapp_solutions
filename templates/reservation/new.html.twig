{% extends 'base.html.twig' %}
{% block body %}

    <div class="pad100">
        <div class="container">
            <div class="row mt-3">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h4>
                            Nueva reserva
                        </h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div class="well">
                        {{ form_start(form, {'attr': {'id': 'room_seeker', 'url': url}, 'method': 'POST'}) }}
                            <fieldset>
                                <legend><i class="fa fa-lock" aria-hidden="true"></i> BÃºsqueda de habitaciones</legend>
                                <div class="form-group">
                                    <label for="fechas">Seleccione fechas</label>
